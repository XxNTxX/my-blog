---
import type { Frontmatter } from '@myTypes/index';
import Tag from "@components/Tag.astro";

interface Props {
  frontmatter: Frontmatter
}

const { frontmatter } = Astro.props;
---
<div class="post-header mx-auto max-w-3xl border-b border-b-gray-400">
  <h1 class="font-bold text-3xl text-gray-900 my-4">
    {frontmatter.title}
  </h1>
  <p class="text-sm text-gray-500 mb-4">
    投稿日: {frontmatter.pubDate.toString().slice(0, 10)}
  </p>
  <div class="tags flex flex-wrap gap-2 mb-4">
    {frontmatter.tags.map((tag) => (
      <Tag tagName={tag} />
    ))}
  </div>
</div>
